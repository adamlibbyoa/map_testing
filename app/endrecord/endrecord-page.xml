<Page class="page endTrailPage" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:map="nativescript-mapbox" 
    xmlns:FAB="nativescript-floatingactionbutton">


    <ContentView  >
        <GridLayout rows="* auto">
            <StackLayout>
                <Label text="Trail Description" horizontalAlignment="center" class="titleLabel" />

                <!-- <Label row="0" col="0" text="Trail Name: " horizontalAlignment="center" verticalAlignment="middle" class="" /> -->
                <TextField row="0" col="1" hint="Trail Name..." returnKeyType="done" blur="saveName" returnPress="saveName" autocorrect="true" class="inputField" />
                <Label text="Distance: " class="textLbl" />
                <Label text="{{ distance }}" class="textLblChild" />

                <Label text="Duration: " class="textLbl" />
                <Label text="{{ duration }}" class="textLblChild" />

            </StackLayout>
            <Button text="Confirm" verticalAlignment="bottom" horizontalAlignment="right" class="confirmTrailBtn" tap="goToHome" />
            <Button text="Discard" verticalAlignment="bottom" horizontalAlignment="left" class="discardTrailBtn" tap="discardTrail" />
        </GridLayout>
    </ContentView>

</Page>

