<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigating" shownModally="onShownModally">
    <StackLayout width="320vw">
        <Image src="res://obstical_icon" width="32vw" height="32vw" style="margin-top: 8; margin-bottom: 8;" />
        <Label width="280vw" text="Difficulty rating:" />
        <!-- <StackLayout orientation="horizontal" horizontalAlignment="center" width="300vw"> -->
        <GridLayout width="280vw" rows="40vh" columns="* * * *" style="margin-top: 10vh; margin-bottom: 10vh;">
            <Image id="12" tap="onDifficultySelected" src="{{ oneSelected }}" row="0" col="0" />
            <Image id="35" tap="onDifficultySelected" src="{{ threeSelected }}" row="0" col="1" />
            <Image id="68" tap="onDifficultySelected" src="{{ sixSelected }}" row="0" col="2" />
            <Image id="910" tap="onDifficultySelected" src="{{ nineSelected }}" row="0" col="3" />

        </GridLayout>
        <!-- </StackLayout> -->
        <TextView id="info" hint="Please enter addition or helpful information here..." textWrap="true" height="100vh" width="280vw" style="margin: 6; border-width: 2px; border-color: black; font-size: 12;" />
        <GridLayout width="280vw" rows="50vw" columns="* *">
            <Button text="Cancel" tap="onCancel" col="0" style="background-color: #db4437; color: white;" />
            <Button text="Confirm" tap="onSubmit" col="1" style="background-color: #4281a4; color: white;" />
        </GridLayout>
    </StackLayout>
</Page>