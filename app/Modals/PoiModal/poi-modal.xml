<Page xmlns="http://www.nativescript.org/tns.xsd" shownModally="onShownModally">
    <StackLayout width="320vw">
        <Image src="res://camera_poi_icon" width="32vw" height="32vw" style="margin-top: 8; margin-bottom: 8;" />
        <GridLayout width="300vw" rows="30vh" columns="* * * * *">
            <Image id="1" row="0" col="0" src="res://star_grey" tap="onStarClicked" />
            <Image id="2" row="0" col="1" src="res://star_grey" tap="onStarClicked" />
            <Image id="3" row="0" col="2" src="res://star_grey" tap="onStarClicked" />
            <Image id="4" row="0" col="3" src="res://star_grey" tap="onStarClicked" />
            <Image id="5" row="0" col="4" src="res://star_grey" tap="onStarClicked" />
        </GridLayout>
        <Label width="280vw" text="Additional Information:" style="margin-top: 12; margin-bottom: 4;" />
        <TextView id="info" hint="Please enter addition or helpful information here..." textWrap="true" height="100vh" width="280vw" style="margin: 6; border-width: 2px; border-color: black; font-size: 12;" />
        <GridLayout width="280vw" rows="50vw" columns="* *">
            <Button text="Cancel" tap="onCancel" col="0" style="background-color: #db4437; color: white;" />
            <Button text="Confirm" tap="onSubmit" col="1" style="background-color: #4281a4; color: white;" />
        </GridLayout>
    </StackLayout>
</Page>